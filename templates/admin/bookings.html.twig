{% extends 'base_admin.html.twig' %}

{% block body %}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-11">
            <div class="card">
                <div class="card-header">Bookings</div>
            {% if bookings is defined and bookings is not null %}
                <div class="card-body">
                    <table class="table">
                        <thead>
                          <tr>
                            <th scope="col">Date</th>
                            <th scope="col">User</th>
                            <th scope="col">Email</th>
                            <th scope="col">Phone</th>
                            <th scope="col">Gender</th>
                            <th scope="col">Time</th>
                            <th scope="col">Confirmation</th>
                            <th scope="col">Statut</th>
                          </tr>
                          
                        </thead>
                        <tbody>
                            {% for booking in bookings %}
                                <tr>
                                    <td>{{ booking.date }}</td>
                                    <td>{{patient.username}}</td>
                                    <td>{{ patient.email }}</td>
                                    <td>{{ patient.phoneNumber }}</td>
                                    <td>{{ patient.gender }}</td>
                                    <td>{{booking.time}}</td>
                                    <td>
                                        {% if booking.confirmation == 0 %}
                                            <a href=""> <button class="btn btn-warning" style='width:8rem;'>Not confirmed</button> </a> 
                                         {% else %}
                                            <a href=""><button class="btn btn-success" style='width:8rem;'>Confirmed</button></a> 
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if booking.status == 0 %}
                                            <a href=""> <button class="btn btn-primary" style='width:6rem;'>En Attente</button> </a> 
                                         {% else %}
                                            <a href=""><button class="btn btn-success" style='width:6rem;'>Confirmé</button></a> 
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                        {% else %}
                                <td>Aucune Réservation disponible</td>
                        {% endif %}
                          
                        </tbody>
                      </table>
                </div>

            </div>
        </div>
    </div>
</div>

{% endblock %}