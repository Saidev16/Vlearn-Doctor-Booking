{% extends 'base_admin.html.twig' %}

{% block body %}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-11">
            <div class="card">
                <div class="card-header">Bookings</div>

                    {% for message in app.flashes('NoBookingsfound') %}
                        <div class="alert alert-danger">
                            {{ message }}
                        </div>
                    {% endfor %}

            {% if bookings is defined and bookings is not null %}
                <div class="card-body">
                    <table class="table">
                        <thead>
                          <tr>
                            <th scope="col">Date</th>
                            <th scope="col">User</th>
                            <th scope="col">Email</th>
                            <th scope="col">Phone</th>
                            <th scope="col">Gender</th>
                            <th scope="col">Time</th>
                            <th scope="col">Confirmation</th>
                            <th scope="col">Statut</th>
                          </tr>
                          
                        </thead>
                        <tbody>
                            {% for booking in bookings %}
                                <tr>
                                    <td>{{ booking.date }}</td>
                                    <td>{{patient.username}}</td>
                                    <td>{{ patient.email }}</td>
                                    <td>{{ patient.phoneNumber }}</td>
                                    <td>{{ patient.gender }}</td>
                                    <td>{{booking.time}}</td>
                                    <td>
                                        {# {% if booking.confirmation == 0 %}
                                            <a href="{{ path('toggleConfirmation' , {booking : booking.id , redirection: 2 }) }}"> <button class="btn btn-warning" style='width:8rem;'>Not confirmed</button> </a> 
                                         {% else %}
                                            <a href="{{ path('toggleConfirmation' , {booking : booking.id , redirection: 2 }) }}"><button class="btn btn-success" style='width:8rem;'>Confirmed</button></a> 
                                        {% endif %} #}

                                        <div class="btn-group">
                                            {% if booking.confirmation == 0 %}
                                                <button type="button" class="btn btn-warning dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style='width:8rem;'>Pending</button>
                                            {% elseif booking.confirmation == 1 %}
                                                <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style='width:8rem;'>Confirmed</button>
                                            {% else %}
                                                <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style='width:8rem;'>Cancelled</button>
                                            {% endif %}
                                                <div class="dropdown-menu">
                                                    <a class="dropdown-item" href="{{ path('confirmBooking' , {booking : booking.id  , redirection: 2}) }}">Confirm</a>
                                                    <a class="dropdown-item" href="{{ path('cancelBooking' , {booking : booking.id , redirection: 2}) }}">Cancel</a>
                                                </div>
									    </div>

                                    </td>
                                    <td>
                                        {% if booking.status == 0 %}
                                            <a href="{{ path('toggleVisited' , {booking : booking.id , redirection: 2 }) }}"> <button class="btn btn-primary" style='width:7rem;'>Not visited</button> </a> 
                                         {% else %}
                                            <a href="{{ path('toggleVisited' , {booking : booking.id , redirection: 2 }) }}"><button class="btn btn-success" style='width:7rem;'>Visited</button></a> 
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                        {% else %}
                                <td>Aucune RÃ©servation disponible</td>
                        {% endif %}
                          
                        </tbody>
                      </table>
                </div>

            </div>
        </div>
    </div>
</div>

{% endblock %}